<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/dp40">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="@dimen/dp16">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/pvPhoto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp200" />

        <TextView
            android:id="@+id/tvShortDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            android:maxLines="3"
            android:textSize="@dimen/sp22"
            tools:text="Пример текста с коротким описанием" />

        <TextView
            android:id="@+id/tvLongDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            android:maxLines="10"
            android:textSize="@dimen/sp14"
            tools:text="Пример с длинным тестом раоываорыоарыволарыоарывраолыраывроаыроароырваолыраолывр" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp8"
            app:cardBackgroundColor="@color/green_blue"
            app:cardCornerRadius="@dimen/dp8">

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/mulish_700"
                android:gravity="center"
                android:paddingVertical="@dimen/dp4"
                android:textColor="?attr/colorOnSurface"
                android:textSize="@dimen/sp26"
                tools:text="TEEEST" />

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_number_header"
            android:textAlignment="center"
            android:textSize="@dimen/sp18"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp8"
            app:cardBackgroundColor="@color/green_blue"
            app:cardCornerRadius="@dimen/dp8">

            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/mulish_700"
                android:gravity="center"
                android:paddingVertical="@dimen/dp4"
                android:textColor="?attr/colorOnSurface"
                android:textSize="@dimen/sp26"
                tools:text="+375333333333" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>