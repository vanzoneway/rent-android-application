<resources>

<style name="Base.Theme.HousingApp" parent="Theme.Material3.DayNight.NoActionBar">
    <item name="android:statusBarColor">?attr/colorSurface</item>
    <item name="android:navigationBarColor">?attr/colorSurface</item>
    <item name="android:fontFamily">@font/mulish_400</item>
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
</style>

<style name="Theme.HousingApp" parent="Base.Theme.HousingApp">
    <item name="android:windowLightStatusBar">true</item>
    <item name="colorSurface">@color/white</item> <!-- Цвет фона -->
    <item name="colorSurfaceContainer">@color/lighttheme_gray</item> <!-- Цвет сard view контейнеров на фоне -->
    <item name="colorOnSurface">@color/black</item> <!-- Цвет текста -->
    <item name="colorFaint">@color/lighttheme_dark_gray</item>
    <item name="colorTertiary">@color/green_blue</item>
    <item name="colorTransparentSurface">@color/transparent_white</item>
    <item name="colorSecondary">@color/green_blue</item>
</style>

</resources>